<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Register - NewsApp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    #passwordError{
      display: none;
    }
    .bg-register-image {
      background-size: cover;
      background-position: center;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <div class="header2 bg-success">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="/img/avatars/LogoB.png" alt="NewsApp" width="50px" height="50px">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#header2" aria-controls="header2" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="header2">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/articles">Articles</a>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn rounded-pill btn-dark py-2 px-4" href="register">Admin SignUp</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  <% if (successMessage && successMessage.length > 0) { %>
    <div class="alert alert-success">
        <%= successMessage %>
        </div>
    <% } %>
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="alert alert-danger">
            <%= errorMessage %>
        </div>
    <% } %>

  <!-- Registration Form -->
  <div class="container mt-5">
    <div class="card shadow-lg border-0">
      <div class="row g-0">
        <div class="col-lg-5 d-none d-lg-block">
          <div class="bg-register-image h-100" style="background-image: url('/images/g.jpg');"></div>
        </div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center mb-4">
              <h4 class="text-dark">Create an Account!</h4>
            </div>
            <form method="POST" action="/admin/users">
              <div class="mb-3">
                <input class="form-control" id="name" type="text" placeholder="Name" name="name" required>
              </div>
              <div class="mb-3">
                <input class="form-control" id="username" type="email" placeholder="Email Address" name="username" required>
              </div>
              <div class="row mb-3">
                <div class="col-sm-6">
                  <input class="form-control" id="password" type="password" placeholder="Password" name="pass" required>
                </div>
                <div class="col-sm-6">
                  <input class="form-control" id="password" type="password" placeholder="Repeat Password" name="pass_repeat" required>
                </div>
              </div>
              <button class="btn btn-primary w-100 text-white" type="submit">Register Account</button>
              <hr>
            </form>
            <div class="text-center">
              <a class="small" href="login">Already have an account? Login!</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
