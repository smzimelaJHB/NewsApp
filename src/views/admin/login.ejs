<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Login - NewsApp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .bg-login-image {
      background-size: cover;
      background-position: center;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="header2 bg-success">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="img/avatars/LogoB.png" alt="NewsApp" width="50px" height="50px">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="login">Login</a>
            </li>
            <li class="nav-item">
              <a class="btn rounded-pill btn-dark py-2 px-4" href="register">Sign up</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>

  <% if (successMessage && successMessage.length > 0) { %>
    <div class="alert alert-success">
        <%= successMessage %>
    </div>
    <% } %>
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="alert alert-danger">
            <%= errorMessage %>
        </div>
    <% } %>


  <!-- Login Container -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-9 col-lg-12 col-xl-10">
        <div class="card shadow-lg border-0">
          <div class="row g-0">
            <div class="col-lg-6 d-none d-lg-block">
              <div class="bg-login-image h-100" style="background-image: url('img/cakes/bgWedding.jpg');"></div>
            </div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h4 class="text-dark mb-4">Welcome Back!</h4>
                </div>
                <form class="user" method="POST">
                  <div class="mb-3">
                    <input class="form-control" id="exampleInputEmail" type="email" placeholder="Enter Email Address..." name="username">
                  </div>
                  <div class="mb-3">
                    <input class="form-control" id="exampleInputPassword" type="password" placeholder="Password" name="pass">
                  </div>
                  <div class="mb-3 form-check">
                    <input class="form-check-input" id="formCheck-1" type="checkbox">
                    <label class="form-check-label" for="formCheck-1">Remember Me</label>
                  </div>
                  <button class="btn btn-primary btn-block w-100 text-white" type="submit">Login</button>
                  <hr>
                </form>
                <div class="text-center">
                  <a class="small" href="register">Create an Account!</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
